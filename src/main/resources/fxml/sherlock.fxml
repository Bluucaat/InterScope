<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:id="sherlockGrid"
          styleClass="grid"
          maxHeight="650"
          maxWidth="850"
          translateX="-150"
          translateY="-850"
          fx:controller="hu.unideb.interscope.controller.SherlockController">

    <VBox>
        <HBox spacing="30"
              GridPane.rowIndex="0"
              GridPane.columnIndex="0"
              alignment="CENTER">

            <ImageView fitWidth="70" preserveRatio="true">
                <Image url="@/userLogo.png"/>
            </ImageView>

            <TextField fx:id="usernameField"
                       promptText="Enter a username"
                       prefWidth="300"
                       styleClass="text-field"/>
            <Button fx:id="searchButton"
                    text="Search"
                    styleClass="search-button"/>
            <VBox>
                <fx:define>
                    <ToggleGroup fx:id="searchMode"/>
                </fx:define>
                <RadioButton fx:id="sfwRadio"
                             text="SFW"
                             selected="true"
                             toggleGroup="$searchMode"
                             styleClass="radio-button"/>
                <RadioButton fx:id="nsfwRadio"
                             text="NSFW"
                             toggleGroup="$searchMode"
                             styleClass="radio-button"/>
            </VBox>
            <padding>
                <Insets bottom="30"/>
            </padding>
        </HBox>


        <TableView fx:id="resultsTable"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"
                   GridPane.halignment="LEFT">
            <columns>
                <TableColumn fx:id="siteColumn"
                             text="Site"
                             prefWidth="200"
                             reorderable="false"/>
                <TableColumn fx:id="linkColumn"
                             text="Link"
                             prefWidth="250"
                             reorderable="false"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</GridPane>