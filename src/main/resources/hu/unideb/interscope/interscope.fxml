<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.layout.AnchorPane?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.interscope.InterscopeController"
           fx:id="rootPane" style="-fx-background-color: #111016;" prefWidth="888" prefHeight="500">

    <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <GridPane fx:id="mainGrid" hgap="50" vgap="50">
            <padding>
                <Insets top="50" right="30" bottom="20" left="30"/>
            </padding>

            <Button fx:id="userSearch" prefWidth="165" prefHeight="165" styleClass="big-button"
                    onAction="#handleMenuButtonClick" onMouseEntered="#handleLogoHover"
                    onMouseExited="#handleLogoHover">
                <graphic>
                    <VBox alignment="CENTER" translateY="12" spacing="24">
                        <ImageView fx:id="userLogo" fitWidth="76" preserveRatio="true"/>
                        <Label text="user search" styleClass="button-text"/>
                    </VBox>
                </graphic>
            </Button>

            <Button fx:id="locationButton" prefWidth="165" prefHeight="165" styleClass="big-button"
                    GridPane.columnIndex="1"
                    onAction="#handleLocationButtonClick" onMouseEntered="#handleLogoHover"
                    onMouseExited="#handleLogoHover">
                <graphic>
                    <VBox alignment="CENTER" translateY="10" spacing="20">
                        <ImageView fx:id="locationLogo" fitWidth="80" preserveRatio="true"/>
                        <Label text="location search" styleClass="button-text"/>
                    </VBox>
                </graphic>
            </Button>

            <Button fx:id="emailButton" prefWidth="165" prefHeight="165" styleClass="big-button"
                    GridPane.columnIndex="2"
                    onAction="#handleEmailButtonClick" onMouseEntered="#handleLogoHover"
                    onMouseExited="#handleLogoHover">
                <graphic>
                    <VBox alignment="CENTER" translateY="10" spacing="20">
                        <ImageView fx:id="emailLogo" fitWidth="80" preserveRatio="true"/>
                        <Label text="email search" styleClass="button-text"/>
                    </VBox>
                </graphic>
            </Button>

            <Button fx:id="logsButton" prefWidth="165" prefHeight="165" styleClass="big-button" GridPane.rowIndex="1"
                    onAction="#handleLogButtonClick" onMouseEntered="#handleLogoHover"
                    onMouseExited="#handleLogoHover">
                <graphic>
                    <VBox alignment="CENTER" translateY="12" spacing="20">
                        <ImageView fx:id="logsLogo" fitWidth="80" preserveRatio="true"/>
                        <Label text="search history" styleClass="button-text"/>
                    </VBox>
                </graphic>
            </Button>
            <Button fx:id="settingsButton" prefWidth="165" prefHeight="165" styleClass="big-button"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"
                    onAction="#handlePreferencesButtonClick" onMouseEntered="#handleLogoHover"
                    onMouseExited="#handleLogoHover">
                <graphic>
                    <VBox alignment="CENTER" translateY="10" spacing="20">
                        <ImageView fx:id="preferencesLogo" fitWidth="80" preserveRatio="true"/>
                        <Label text="prefrences" styleClass="button-text"/>
                    </VBox>
                </graphic>
            </Button>
            <Button fx:id="exitButton" prefWidth="165" prefHeight="165" styleClass="big-button" GridPane.columnIndex="2"
                    GridPane.rowIndex="1"
                    onAction="#closeApplication" onMouseEntered="#handleLogoHover" onMouseExited="#handleLogoHover">
                <graphic>
                    <VBox alignment="CENTER" translateY="13" spacing="23">
                        <ImageView fx:id="exitLogo" fitWidth="75" preserveRatio="true"/>
                        <Label text="close application" styleClass="button-text"/>
                    </VBox>
                </graphic>
            </Button>
        </GridPane>
        <Line startY="200" endY="700.0"
              stroke="#656465" strokeLineCap="BUTT" strokeWidth="2">
        </Line>
        <VBox alignment="TOP_CENTER" spacing="10" prefWidth="140">
            <padding>
                <Insets top="50" right="20" left="20" bottom="20"/>
            </padding>
            <ImageView fx:id="appLogo" fitWidth="160" preserveRatio="true"/>
            <Text fx:id="title" text="INTERSCOPE" wrappingWidth="150" styleClass="interscope-text"/>
            <Text fx:id="description" wrappingWidth="150" styleClass="description-text"
                  text="Welcome to InterScope! InterScope is an application that consolidates the functionality of OSINT tools into a single, user-friendly platform, making it accessible without prior expertise. Developed by Ribár Krisztián as part of a thesis project."
                  VBox.vgrow="ALWAYS">
            </Text>
            <AnchorPane>
                <Button fx:id="backButton" text="Back" AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="10"
                        styleClass="big-button" onAction="#handleBackButtonClick" onMouseEntered="#handleLogoHover"
                        onMouseExited="#handleLogoHover"/>
            </AnchorPane>
        </VBox>
    </HBox>
    <GridPane fx:id="userSearchGrid"
              style="-fx-padding: 0 0 0 40; -fx-background-color: #1B1B28; -fx-border-radius: 10px; -fx-background-radius: 10px;"
              prefHeight="405" prefWidth="620" maxHeight="405" maxWidth="620" translateX="-120" translateY="-600">
    </GridPane>

    <GridPane fx:id="locationSearchGrid"
              style="-fx-padding: 0 0 0 40; -fx-background-color: #1B1B28; -fx-border-radius: 10px; -fx-background-radius: 10px;"
              prefHeight="405" prefWidth="620" maxHeight="405" maxWidth="620" translateX="-120" translateY="-600">
    </GridPane>

    <GridPane fx:id="emailSearchGrid"
              style="-fx-padding: 0 0 0 40; -fx-background-color: #1B1B28; -fx-border-radius: 10px; -fx-background-radius: 10px;"
              prefHeight="405" prefWidth="620" maxHeight="405" maxWidth="620" translateX="-120" translateY="-600">
    </GridPane>

    <GridPane fx:id="logsGrid"
              style="-fx-padding: 0 0 0 40; -fx-background-color: #1B1B28; -fx-border-radius: 10px; -fx-background-radius: 10px;"
              prefHeight="405" prefWidth="620" maxHeight="405" maxWidth="620" translateX="-120" translateY="-600">
    </GridPane>

    <GridPane fx:id="preferencesGrid"
              style="-fx-padding: 0 0 0 40; -fx-background-color: #1B1B28; -fx-border-radius: 10px; -fx-background-radius: 10px;"
              prefHeight="405" prefWidth="620" maxHeight="405" maxWidth="620" translateX="-120" translateY="-600">
    </GridPane>
</StackPane>
