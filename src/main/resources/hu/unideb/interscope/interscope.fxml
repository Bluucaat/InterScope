            <Button fx:id="button3" prefWidth="190" prefHeight="190" styleClass="big-button" GridPane.columnIndex="2"/>
            <Button fx:id="button4" prefWidth="190" prefHeight="190" styleClass="big-button" GridPane.rowIndex="1"/>
            <Button fx:id="button5" prefWidth="190" prefHeight="190" styleClass="big-button" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button fx:id="button6" prefWidth="190" prefHeight="190" styleClass="big-button" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    </GridPane>

    <VBox alignment="TOP_CENTER" spacing="20" prefWidth="140">
        <padding>
            <Insets top="20" right="20" bottom="20" left="0"/>
        </padding>
        <ImageView fx:id="logo" fitWidth="120" preserveRatio="true"/>
        <!-- INTERSCOPE text -->
